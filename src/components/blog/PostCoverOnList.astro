---
import { Picture } from 'astro:assets';
import type { InferEntrySchema } from 'astro:content'

interface Props {
    data: InferEntrySchema<"blog">;
    type?: 'large'
}

const {data, type} = Astro.props;
---

<div class="relative w-full">
    <Picture src={data.coverImage}
             widths={type === 'large' ? [480, 768, 1024, 1440, 1920] : [480, 768]}
             formats={['avif']}
             alt={data.title} inferSize={true}
             class:list={['aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1]', type === 'large' ? 'lg:aspect-[2/1]' : 'lg:aspect-[3/2]']}
    ></Picture>
    <!--<img src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80" alt="" class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">-->
    <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
</div>