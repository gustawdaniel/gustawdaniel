---
import { getLangAndSlugFromUrl } from "../../i18n/utils";
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import { getCollection } from "astro:content";
import PostLayout from "@/layouts/BlogPost";

export const getStaticPaths = (async () => {
	const blogEntries = await getCollection("post");
	console.log("blogEntries", blogEntries);
	return blogEntries.map((entry) => {
		console.log("entry.slug", entry.slug, getLangAndSlugFromUrl(entry.slug));
		const { lang, slug } = getLangAndSlugFromUrl(entry.slug);
		return {
			params: { lang: lang === "en" ? "en" : lang, slug },
			props: { entry },
		};
	});
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

console.log("Astro.props", Astro.props);

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<PostLayout post={entry}>
	<pre>{entry.slug}</pre>
	<pre class="h-half">{JSON.stringify(entry, "", 2)}</pre>
	<Content />
</PostLayout>
